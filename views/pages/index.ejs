<!DOCTYPE html>
<html lang="en">
  <head>
    <% include ../partials/head %>
  </head>
  <body>
    <header class="site-header">
      <% include ../partials/header %>

      <div class="page-header">
        <div class="page-header__overlay">
          <div class="container">
            <h1 class="page-title">Find Something To Watch</h1>
            <a href="/movies" class="button">Movies</a>
            <a href="/tv-shows" class="button">TV Shows</a>
          </div>
        </div>
      </div>

    </header>
      <main class="container">
        <section class="section">
          <h2 class="section__title">Popular Movies</h2>
            <div class="u-clearfix">
            <% if (popularMovies) { %>

              <% popularMovies.filter((m,i) => i < 8).forEach( media => { %>

                <%- include('../partials/media-thumbnail', {
                  media: media,
                  mediaType: "movie",
                }) %>

              <% }) %>

            <% } %>
          </div>
          <a class="button" href="#">Find More Movies</a>
        </section>

        <section class="section">
          <h2 class="section__title">Popular Tv Shows</h2>
            <div class="u-clearfix">
            <% if (popularTvShows) { %>

              <% popularTvShows.filter((m,i) => i < 8).forEach( media => { %>

                <%- include('../partials/media-thumbnail', {
                  media: media,
                  mediaType: "tv",
                }) %>

              <% }) %>

            <% } %>
          </div>
        </section>
        
      </main>
    <footer>
      <% include ../partials/footer %>
    </footer>
  </body>
</html>
