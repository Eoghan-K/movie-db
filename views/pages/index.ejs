<!DOCTYPE html>
<html lang="en">
  <head>
    <% include ../partials/head %>
  </head>
  <body>
    <header class="site-header">
      <% include ../partials/header %>
    </header>
      <main class="container">
        <section class="section">
          <h2 class="section__title">Popular Movies</h2>
            <div class="u-clearfix">
            <% if (popularMovies) { %>

              <% popularMovies.filter((m,i) => i < 8).forEach( media => { %>

                <%- include('../partials/media-thumbnail', {
                  media: media,
                  mediaType: "movie",
                }) %>

              <% }) %>

            <% } %>
          </div>
        </section>

        <section class="section">
          <h2 class="section__title">Lastest Movies</h2>
          <ul class="u-clearfix">
            <% if (latestMovies) { %>

              <% latestMovies.filter((m,i) => i < 8).forEach( media => { %>
                <% if(media.poster_path != null){ %>
                  <%- include('../partials/media-thumbnail', {
                    media: media,
                    mediaType: "movie",
                  }) %>
                <% } %>
              <% }) %>

            <% } %>
          </ul>
        </section>
        
        <section class="section">
          <h2 class="section__title">Popular Tv Shows</h2>
            <div class="u-clearfix">
            <% if (popularTvShows) { %>

              <% popularTvShows.filter((m,i) => i < 8).forEach( media => { %>

                <%- include('../partials/media-thumbnail', {
                  media: media,
                  mediaType: "tv",
                }) %>

              <% }) %>

            <% } %>
          </div>
        </section>
        <section class="section">
          <h2 class="section__title">Lastest Tv Shows</h2>
          <ul class="u-clearfix">
            <% if (latestTvShows) { %>
              
              <% latestTvShows.filter((m,i) => i < 8).forEach( media => { %>
                <% if(media.poster_path != null){ %>
                  <%- include('../partials/media-thumbnail', {
                    media: media,
                    mediaType: "tv",
                  }) %>
                <% } %>

              <% }) %>

            <% } %>
          </ul>
        </section>
      </main>
    <footer>
      <% include ../partials/footer %>
    </footer>
  </body>
</html>
